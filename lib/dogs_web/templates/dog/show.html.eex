<div>
  <div class="text-center">
    <h4><%= @dog.name %></h4>
  </div>
  <div class="km-img-wrapper center-block">
    <img class="img-responsive img-thumbnail" alt="<%= @dog.name %>" src="<%= @dog.photo %>">
  </div>
  <div class="km-margin-top">
    <div>
      <%= link to: dog_path(@conn, :edit, @dog.id), class: "btn btn-default" do %>
        Edit
      <% end %>
      </a>
    </div>

    <table>
      <thead>
        <tr>
          <th>Attributes</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Coat</td>
          <td><%= @dog.coat %></td>
        </tr>
        <tr>
          <td>Color</td>
          <td><%= @dog.color %></td>
        </tr>
        <tr>
          <td>Height</td>
          <td><%= @dog.height_in %></td>
        </tr>
        <tr>
          <td>Weight</td>
          <td><%= @dog.weight_lbs %></td>
        </tr>
        <tr>
          <td>Life Expectancy</td>
          <td><%= @dog.life_exp %></td>
        </tr>
        <tr>
          <td>Country of Origin</td>
          <td><%= @dog.country_of_origin %></td>
        </tr>
        <tr>
          <td>Year of Origin</td>
          <td><%= @dog.year_of_origin %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
